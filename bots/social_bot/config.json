[
  {
    "name": "Fotovorschlag",
    "url": "https://fischr.org/feed?q=fotos",
    "include": ["fotovorschlag"],
    "include_images": true,
    "template": "{content} #fotovorschlag",
    "targets": ["bluesky", "mastodon"]
  },
  {
    "name": "Alle anderen Fotos",
    "url": "https://fischr.org/feed?q=fotos",
    "include": ["fotos"],
    "exclude": ["fotovorschlag"],
    "include_images": true,
    "template": "{content}",
    "targets": ["bluesky", "mastodon"]
  },
  {
    "name": "Popcornfieber",
    "url": "https://fischr.org/feed?q=popcornfieber",
    "template": "Ich hab gerade {title} gesehen. {link}",
    "targets": ["bluesky", "mastodon"]
  },
  {
    "name": "Ausgelesen",
    "url": "https://fischr.org/feed/",
    "include": ["ausgelesen"],
    "template": "Ich habe mal wieder ein Buch gelesen. {link}",
    "targets": ["bluesky", "mastodon"]
  },
  {
    "name": "Rezept vom Chef",
    "url": "https://fischr.org/feed/",
    "include": ["rezeptvomchef"],
    "template": "Cheffe hat gekocht. {link}",
    "targets": ["bluesky", "mastodon"]
  },
  {
    "name": "Ich war wandern!",
    "url": "https://fischr.org/feed?q=fotos",
    "include": ["wandern"],
    "template": "Ich war endlich mal wieder wandern! {link}",
    "targets": ["bluesky", "mastodon"]
  },
  {
    "name": "Alle anderen Blogartikel",
    "url": "https://fischr.org/feed/",
    "include": ["blog"],
    "exclude": ["ausgelesen","popcornfieber","rezeptvomchef","popcornfieber","wandern"],
    "template": "Ich habe da mal was aufgeschrieben. {link}",
    "targets": ["bluesky", "mastodon"]
  }
]
